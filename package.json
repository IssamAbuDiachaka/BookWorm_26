{
  "name": "bookworm",
  "version": "0.1.0",
  "private": true,
  "description": "Educational collaboration platform for students and lecturers",
  "scripts": {
    "dev": "concurrently -n backend,frontend \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm run --recursive build",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "packageManager": "pnpm@9.14.2"
}
